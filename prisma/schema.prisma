generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Trade {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  symbol       String
  type         String   // 'BUY' or 'SELL'
  quantity     Float
  price        Float
  date         DateTime
  total        Float
  fees         Float?
  notes        String?
  currentPrice Float?
  profitLoss   Float?
  journal      Json?    // Journal entry with notes, tags, emotion, rating, etc.
  source       String   // 'CSV' or 'API'
  sourceId     String?  // Original ID from source (e.g., Trading212 order ID)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([sourceId, source])
  @@index([date])
}
