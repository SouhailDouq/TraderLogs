generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  email         String      @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Relations
  trades        Trade[]
  watchlists    Watchlist[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

model Trade {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  symbol       String
  type         String   // 'BUY' or 'SELL'
  quantity     Float?
  price        Float?
  date         DateTime
  total        Float?
  fees         Float?
  notes        String?
  currentPrice Float?
  profitLoss   Float?
  journal      Json?    // Journal entry with notes, tags, emotion, rating, etc.
  source       String?  // 'CSV' or 'API'
  sourceId     String?  // Original ID from source (e.g., Trading212 order ID)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sourceId, source, userId])
  @@index([date])
  @@index([userId])
}

model Watchlist {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  symbol        String
  signal        String   // 'Strong', 'Moderate', 'Weak', 'Avoid'
  positionScore Float
  entryPrice    Float
  analyzedAt    String
  stockData     Json     // Stock data from API
  date          String   // Date in YYYY-MM-DD format for daily reset
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([symbol, date, userId])
  @@index([date])
  @@index([userId])
}
